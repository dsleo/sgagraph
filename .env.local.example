# Copy this file to .env.local for local development.

# Python backend (ArxiTex)
# NEXT_PUBLIC_ARXITEX_BACKEND_URL=http://127.0.0.1:8000

# Optional: pin the frontend to a specific backend API version.
# If set, ArxiGraph will call `${NEXT_PUBLIC_ARXITEX_BACKEND_URL}/version` and
# show an error if `api_version` doesn't match.
# NEXT_PUBLIC_ARXITEX_API_VERSION=0.1.0

# Hugging Face dataset (preferred source: load pre-processed papers)
NEXT_PUBLIC_HF_DATASET_ORG=turnstilelabs
NEXT_PUBLIC_HF_DATASET_REPO=mathxiv
NEXT_PUBLIC_HF_DATASET_REF=main
